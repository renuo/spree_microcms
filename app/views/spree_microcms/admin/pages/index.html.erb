<% content_for :page_title do %>
  <%= t(:micro_cms_pages) %>
<% end %>

<% content_for :page_actions do %>
  <li>
    <%= button_link_to t(:new_micro_cms_page), new_admin_page_path, icon: 'icon-plus' %>
  </li>
<% end %>

<%= render 'spree_microcms/admin/submenu' %>

<table class="index sortable" id='listing_micro_cms_pages' data-sortable-link="<%= update_positions_admin_pages_url %>">
  <thead>
  <tr>
    <th class="no-border"></th>
    <th><%= t('key') %></th>
    <th><%= t('presentation') %></th>
    <th><%= t('parent') %></th>
    <th class="actions"></th>
  </tr>
  </thead>
  <tbody>
  <% @pages.each do |page| %>
    <tr class="<%= cycle('odd', 'even') %>" id="<%= spree_dom_id page %>">
      <td class="no-border"><span class="handle"></span></td>
      <td><%= page.key %></td>
      <td><%= page.presentation %></td>
      <td><%= page.parent.try :presentation %></td>
      <td class="actions">
        <%= link_to_edit(page, url: edit_admin_page_path(page), no_text: true) %>
        &nbsp;
        <%= link_to_delete(page, url: admin_page_path(page), no_text: true) %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
